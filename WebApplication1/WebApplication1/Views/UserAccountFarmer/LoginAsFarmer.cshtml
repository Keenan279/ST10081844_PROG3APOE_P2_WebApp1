@model WebApplication1.Models.Farmer

@{
    ViewBag.Title = "LoginAsFarmer";
}
<link href="~/Style/StyleSheetForImages.css" rel="stylesheet" />

<h2 style="color:white">LoginAsFarmer</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4 style="color:white">Farmer</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group"  style="color:white">
        Enter Your Email
        <div class="col-md-10">
            @Html.EditorFor(model => model.FarmerEmail, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.FarmerEmail, "", new { @class = "text-danger" })


        </div>
    </div>

    <div class="form-group"  style="color:white">
        Enter Your Password
        <div class="col-md-10">
            @Html.EditorFor(model => model.FarmerPassword, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.FarmerPassword, "", new { @class = "text-danger" })

        </div>
    </div>


    <p>

    </p>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Login"/>
        </div>
    </div>
</div>
}
<p>

</p>

<div>
    @Html.ActionLink("Click here to Login as an Employee", "LoginAsEmp", "UserAccountEmployee",null, new { id = "OT", style = "color: white" })
</div>
